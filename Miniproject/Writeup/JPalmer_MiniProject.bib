arxivId = {arXiv:1011.1669v3},
author = {Aho, Ken and Derryberry, DeWayne and Peterson, Teri},
doi = {10.1890/13-1452.1},
eprint = {arXiv:1011.1669v3},
file = {:home/joe/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Aho, Derryberry, Peterson - 2014 - Model selection for ecologists the worldviews of AIC and BIC.pdf:pdf},
