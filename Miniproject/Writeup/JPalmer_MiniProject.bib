issn = {13674803},
journal = {Bioinformatics},
number = {13},
pages = {2113--2121},
title = {{A weighted least-squares approach for inferring phylogenies from incomplete distance matrices}},
url = {http://www.info.uqam.ca/{~}makarenv/},
volume = {20},
year = {2004}
}
@article{Reynolds2009,
